      }
    ],
    "requestBody": {
      "required": false,
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "page_size": {
                "type": "integer",
                "minimum": 1,
                "maximum": 100
              },
              "sorts": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "property": { "type": "string" },
                    "direction": {
                      "type": "string",
                      "enum": ["ascending", "descending"]
                    }
                  },
                  "required": ["property", "direction"]
                }
              },
              "filter": {
                "type": "object"
              },
              "start_cursor": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "responses": {
      "200": {
        "description": "Successful query",
        "content": {
          "application/json": {
